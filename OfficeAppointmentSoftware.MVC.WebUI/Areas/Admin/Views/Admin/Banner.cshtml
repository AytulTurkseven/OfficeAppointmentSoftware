<div class="tab-content">
    <div class="tab-pane active" id="tab_0">

        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption">

                    <span class="caption-subject font-red-sunglo bold uppercase"></span>
                    <span class="caption-helper">...</span>
                </div>

            </div>

            <div class="tab-content">
                <div class="tab-pane active" id="tab_0">

                    <div class="portlet light bordered">
                        <div class="portlet-title">
                            <div class="caption">

                                <span class="caption-subject font-red-sunglo bold uppercase">Güncelleme Formu</span>
                                @*<span class="caption-helper">...</span>*@
                            </div>

                        </div>

                        <div class="panel-body">
                            <div class="form">
                                <form class="cmxform form-horizontal tasi-form" id="signupForm" method="post" action="Banner">
                                    @Html.HiddenFor(x=>x.BannerID)
                                    @*<div class="form-group ">
                                        <label for="firstname" class="control-label col-lg-3">Fotoğraf</label>
                                        <div class="col-lg-3">
                                            <a href="javascript:;" class="thumbnail">
                                                <img src="data:image/svg+xml;base64,"
                                                     alt="100%x140" style="height: 140px; width: 100%; display: block;"
                                                     data-src="../assets/global/plugins/holder.js/100%x180">
                                            </a>
                                        </div>
                                    </div>*@

                                    <div class="form-group ">
                                        <label for="firstname" class="control-label col-lg-3">Başlık</label>
                                        <div class="col-lg-6">
                                            @*<input class="form-control m-bot15" type="text">*@
                                            @Html.TextBoxFor(x=>x.Title, new { @class = "form-control m-bot15", type = "text"})
                                        </div>
                                    </div>

                                    <div class="form-group ">
                                        <label for="username" class="control-label col-lg-3">Açıklama</label>
                                        <div class="col-lg-6">
                                            @*<textarea class="form-control" cols="60" rows="5"></textarea>*@
                                            @Html.TextAreaFor(x=>x.Description,5,60, new { @class = "form-control", type = "text" })
                                        </div>
                                    </div>

                                    <div class="form-actions">
                                        <div class="row">
                                            <div class="col-md-offset-3 col-md-9">
                                                <button type="submit" class="btn green">Güncelle</button>
                                                @*<button type="button" class="btn default">İptal</button>*@
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>


                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
