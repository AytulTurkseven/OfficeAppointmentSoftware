<div class="tab-content">
    <div class="tab-pane active" id="tab_0">

        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption">

                    <span class="caption-subject font-red-sunglo bold uppercase"></span>
                    <span class="caption-helper">...</span>
                </div>

            </div>

            <div class="tab-content">
                <div class="tab-pane active" id="tab_0">

                    <div class="portlet light bordered">
                        <div class="portlet-title">
                            <div class="caption">

                                <span class="caption-subject font-red-sunglo bold uppercase">Kayıt Formu</span>
                            </div>

                        </div>
                        <div class="portlet-body form">
                            <form action="SignUp" method="post" class="form-horizontal" enctype="multipart/form-data" role="form">
                                <div class="form-body">
                                    <div class="form-group ">
                                        <label class="col-md-3 control-label">Fotoğraf</label>
                                        <div class="col-md-4">
                                            <input type="file" name="file">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Şirket Adı</label>
                                        <div class="col-md-4">
                                            @*<input type="text" class="form-control">*@
                                            @Html.TextBoxFor(x => x.NewCompany.CompanyName, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="form-group ">
                                        <label for="firstname" class="col-md-3 control-label">Yönetici Adı ve Soyadı</label>
                                        <div class="col-md-4">
                                            @*<input class=" form-control" id="firstname" name="firstname" type="text" />*@
                                            @Html.TextBoxFor(x => x.NewCompany.OwnerName, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Şirket Açıklama</label>
                                        <div class="col-md-4">
                                            @*<textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>*@
                                            @Html.TextAreaFor(x => x.NewCompany.Description, new { @class = "form-control", rows = "3" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-md-3">Telefon</label>
                                        <div class="col-md-4">
                                            @*<input type="text" placeholder="" data-mask="(999) 999-9999" class="form-control">*@
                                            @Html.TextBoxFor(x => x.NewContact.PhoneNumber1, new { @class = "form-control", id = "inputTelefon" })
                                        </div>
                                    </div>
                                    <div class="form-group ">
                                        <label for="email" class="control-label col-md-3">Email</label>
                                        <div class="col-md-4">
                                            @*<input class="form-control " id="email" name="email" type="email" />*@
                                            @Html.TextBoxFor(x => x.NewContact.Email, new { @class = "form-control" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-3 control-label"> Adres</label>
                                        <div class="col-md-4">
                                            @Html.TextAreaFor(x => x.NewContact.Address, new { @class = "form-control", rows = "3" })
                                        </div>

                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-md-3">Plan</label>
                                        <div class="col-md-4">
                                            @*<select class="bs-select form-control">
                    <option>Mustard</option>
                    <option>Ketchup</option>
                    <option>Relish</option>
                </select>*@
                                            @Html.DropDownListFor(x => x.SelectedPlanID, new SelectList(Model.DropDownList, "Value", "Text", new { @class = "bs-select form-control" }))
                                        </div>
                                    </div>
                                    <div class="form-group ">
                                        <label for="username" class="control-label col-md-3">Username</label>
                                        <div class="col-md-4">
                                            @*<input class="form-control " id="username" name="username" type="text" />*@
                                            @Html.TextBoxFor(x => x.Username, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="form-group ">
                                        <label for="password" class="control-label col-md-3">Password</label>
                                        <div class="col-md-4">
                                            @*<input class="form-control " id="password" name="password" type="password" />*@
                                            @Html.TextBoxFor(x => x.Password, new { @class = "form-control", type = "password" })
                                        </div>
                                    </div>
                                    <div class="form-group ">
                                        <label for="password" class="control-label col-md-3">Password Tekrar</label>
                                        <div class="col-md-4">
                                            @*<input class="form-control " id="password" name="password" type="password" />*@
                                            @Html.TextBoxFor(x => x.ConfirmPassword, new { @class = "form-control", type = "password" })
                                        </div>
                                    </div>
                                </div>
                                <div class="form-actions">
                                    <div class="row">
                                        <div class="col-md-offset-3 col-md-9">
                                            <button type="submit" class="btn green">Kaydet</button>
                                            @*<button type="button" class="btn default">İptal</button>*@
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
