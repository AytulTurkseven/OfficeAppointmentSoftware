<div class="tab-content">
    <div class="tab-pane active" id="tab_0">

        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption">

                    <span class="caption-subject font-red-sunglo bold uppercase"></span>
                    <span class="caption-helper">...</span>
                </div>

            </div>

            <div class="tab-content">
                <div class="tab-pane active" id="tab_0">

                    <div class="portlet light bordered">
                        <div class="portlet-title">
                            <div class="caption">
                                <span class="caption-subject font-red-sunglo bold uppercase">Özellik Ekleme</span>
                            </div>

                        </div>
                        <div class="panel-body">
                            <div class="form">
                                <form class="cmxform form-horizontal tasi-form" id="signupForm" method="post" action="FeaturesUpdate">
                                    <div class="form-group">
                                        <label class="control-label col-lg-3">Genel Açıklama</label>
                                        <div class="col-lg-6">
                                            @Html.HiddenFor(x=>x.FeaturesID)
                                            @*<textarea class="form-control" cols="60" rows="4"></textarea>*@
                                            @Html.TextAreaFor(x => x.GeneralDescription, 4, 60, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-lg-3">Başlık</label>
                                        <div class="col-lg-8">
                                            @*<input type="text" class="form-control">*@
                                            @Html.TextAreaFor(x => x.Title, 4, 60, new { @class = "form-control summernote" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-lg-3">Açıklama</label>
                                        <div class="col-lg-6">
                                            @*<textarea class="form-control" cols="60" rows="7"></textarea>*@
                                            @Html.TextAreaFor(x => x.Description, 7, 60, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="form-actions">
                                        <div class="row">
                                            <div class="col-md-offset-3 col-md-9">
                                                <button type="submit" class="btn green">Kaydet</button>
                                                @*<button type="button" class="btn default">İptal</button>*@
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>




