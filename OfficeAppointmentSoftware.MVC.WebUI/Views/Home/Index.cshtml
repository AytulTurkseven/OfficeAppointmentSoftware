    <section id="contact" class="section-padding wow fadeInUp delay-02s">
        <div class="container">
            <div class="row">
                <div class="col-md-12 text-center white">
                    <h5 class="service-title pad-bt15">BİZE ULAŞIN</h5>
                    <p class="sub-title pad-bt15">Planlarımız hakkında bilgi almak için ya da istek ve şikayetleriniz için bize ulaşın! Ekibimiz en yakın zamanda dönüş sağlayacaktır.</p>
                    <hr class="bottom-line white-bg">
                </div>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <div class="loction-info white">
                        <p><i class="fa fa-map-marker fa-fw pull-left fa-2x"></i>Çırağan caddesi No: 25 <br>Beşiktaş / İSTANBUL</p>
                        <p><i class="fa fa-envelope-o fa-fw pull-left fa-2x"></i>info@cetris.com</p>
                        <br />
                        <p><i class="fa fa-phone fa-fw pull-left fa-2x"></i>0212 212 12 12</p>
                    </div>
                </div>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <div class="contact-form">
                        <div id="sendmessage">Mesajınız başarıyla gönderildi. Teşekkür ederiz!</div>
                        <div id="errormessage"></div>

                        <form action="EmailSend" method="post" role="form" class="contactForm">
                            <div class="col-md-6 padding-right-zero">
                                <div class="form-group">
                                    @*<input type="text" name="namesurname" class="form-control" id="name" placeholder="Adınız" data-rule="minlen:4" data-msg="En az 4 karakter giriniz" />*@
                                    @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control", placeholder = "Ad ve Soyad" })
                                    @Html.ValidationMessageFor(x => x.NameSurname, null, new { @class = "bg-danger" })
                                    @*<div class="validation"></div>*@
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    @*<input type="email" class="form-control" name="email" id="email" placeholder="Email Adresiniz" data-rule="email" data-msg="Geçerli bir email adresi giriniz" />*@
                                    @Html.TextBoxFor(x => x.EMail, new { @class = "form-control", placeholder = "Email Giriniz." })
                                    @Html.ValidationMessageFor(x => x.EMail, null, new { @class = "bg-danger" })
                                    @*<div class="validation"></div>*@
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    @*<input type="text" class="form-control" name="subject" id="subject" placeholder="Konu" data-rule="minlen:4" data-msg="En az 8 karakterli bir konu giriniz" />*@
                                    @Html.TextBoxFor(x => x.Subject, new { @class = "form-control", placeholder = "Konu Giriniz." })
                                    @Html.ValidationMessageFor(x => x.Subject, null, new { @class = "bg-danger" })
                                    @*<div class="validation"></div>*@
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    @*<textarea class="form-control" name="message" rows="5" data-rule="required" data-msg="Söylemek istediklerinizi bir kaç cümleyle açıklayınız" placeholder="Mesajınız"></textarea>*@
                                    @Html.TextAreaFor(x => x.Message, new { @class = "form-control", rows = 5 })
                                    @Html.ValidationMessageFor(x => x.Message, null, new { @class = "bg-danger" })
                                </div>
                                <button type="submit" class="btn btn-primary btn-submit">GÖNDER</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    </div>
</body>
